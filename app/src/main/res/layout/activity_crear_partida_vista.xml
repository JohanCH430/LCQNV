<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearPartidaVista">

    <TextView
        android:id="@+id/TextoCrearPtll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Crear Partida"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/InputNumPtlls"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextoCrearPtll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Número de pantallas"
        android:inputType="number"
        />
    <Button
        android:id="@+id/BtnCrearPtll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/InputNumPtlls"
        android:layout_marginTop="50dp"
        android:text="CREAR"
        />
    <Button
        android:id="@+id/BtnVerPtll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BtnCrearPtll"
        android:layout_marginTop="10dp"
        android:text="VER"
        />
    <Button
        android:id="@+id/BtnFinalizarCrearPtll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BtnVerPtll"
        android:layout_marginTop="10dp"
        android:text="FINALIZAR"
        />
    <Button
        android:id="@+id/BtnAtrasCrearPtll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BtnFinalizarCrearPtll"
        android:layout_marginTop="10dp"
        android:text="ATRÁS"
        />
    <TextView
        android:id="@+id/MuestraNumP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""

        />

    <TextView
        android:id="@+id/MuestraCodP"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/BtnAtrasCrearPtll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Partida generada con código:"

        />

</RelativeLayout>