<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginUsuarioVista">

    <TextView
        android:id="@+id/TextNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Introducir nombre: "
        android:textSize="25sp"></TextView>

    <EditText
        android:id="@+id/Nombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="nombre"></EditText>

    <Button
        android:id="@+id/BtnLoginUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="LOGIN" />

    <Button
        android:id="@+id/BtnAtrasLoginUsuario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnLogin"
        android:layout_centerHorizontal="true"
        android:text="Atrás" />

    <TextView
        android:id="@+id/TextErrorLoginUsuario"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:text=""
        android:textSize="25sp"></TextView>


</LinearLayout>