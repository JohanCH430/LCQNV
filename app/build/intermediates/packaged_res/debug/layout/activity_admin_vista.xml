<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminVista">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lcqnv_logo_sin_fondo">

    </ImageView>

    <Space
        android:layout_width="0dp"
        android:layout_height="25dp">

    </Space>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se encuentra autentificado como Administrador">

    </TextView>

    <Space
        android:layout_width="0dp"
        android:layout_height="50dp">

    </Space>

    <Button
        android:id="@+id/btnCrearTexto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CREAR TEXTO" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp">

    </Space>

    <Button
        android:id="@+id/btnCrearQuiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CREAR QUIZ" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp">

    </Space>

    <Button
        android:id="@+id/btnCrearTematica"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CREAR TEMÁTICA" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp">

    </Space>

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="INICIO" />

</LinearLayout>